{
  "name": "cometomesports",
  "version": "1.0.0",
  "description": "Web application to find sporting events near a given ZIP code.",
  "main": "app.js",
  "scripts": {
    "test": "jest",
    "test:cityCoords": "jest cityCoords.test.js",
    "playwright:ui": "npx playwright test --ui --ui-port 3000",
    "playwright:test": "npx playwright test",
    "playwright:headed": "npx playwright test --headed",
    "playwright:codegen": "npx playwright codegen broncosports.com",
    "scrape-byu": "node helperFunctions/scrapeBYU.js",
    "scrape-bsu": "node helperFunctions/scrapeBSU.js",
    "scrape-all": "npm run scrape-byu && npm run scrape-bsu",
    "build": "npm run scrape-all",
    "dev": "npm run scrape-all && echo 'Data updated! Open index.html in browser'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "jest": "^30.2.0",
    "playwright": "^1.56.1"
  },
  "dependencies": {
    "@playwright/test": "^1.56.1"
  }
}
